<%- include("../partials/header") %>


	<div class = "container text-center" style = "margin: 10rem auto">
		<h1>Edit <%= product.name %>!</h1>
		<form action = "/products/<%= product._id %>/?_method=PUT" method = "POST">
	<div style = "width:40%; margin:25px auto;">
		<div class="form-group">
		<input class = "form-control" type = "text" placeholder = "name" name = "product[name]" value ="<%= product.name %>">
	     </div>
	    <div class="form-group">
	    <input class = "form-control" type = "text" placeholder = "img url" name = "product[image]" value ="<%= product.image %>">
	     </div>
		<div class="form-group">
	    <input class = "form-control" type = "text" placeholder = "description" name = "product[description]" value ="<%= product.description %>">
	     </div>
	    <div class="form-group">
	    <button class = "btn btn-lg btn-primary">Submit</button>
	     </div>
	</div>
    
</form>
	</div>


<a href="/products">Go back to products</a>
</div>


